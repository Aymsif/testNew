<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/backround"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="الجمهورية اليمنية"
            android:textColor="@color/txtcolor"
            android:textSize="15pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="وزارة التعليم العالي2"
            android:textColor="@color/txtcolor"
            android:textSize="15pt" />

        <Space

            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تطبيق"
            android:textColor="@color/txtcolor"
            android:textSize="10pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="دليل الطالب الجامعي"
            android:textColor="@color/txtcolor"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Government"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/loginbutton"
            android:onClick="universities"
            android:text="الجامعات الحكومية"
            android:textColor="@color/txtcolor"
            android:textSize="15pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Private"
            android:layout_width="300dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/loginbutton"

            android:onClick="universities"
            android:text="الجامعات الخاصة"
            android:textColor="@color/txtcolor"
            android:textSize="15pt"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        ads:adSize="SMART_BANNER"
        android:id="@+id/adView"
        ads:adUnitId="@string/banner_ad_unit_id" />

</LinearLayout>